# Auto detect text files and perform LF normalization
* text=auto

# Source files
*.py text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf

# VERSION file must always use LF (Unix line endings)
VERSION text eol=lf

# Windows files
*.bat text eol=crlf
*.ps1 text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
